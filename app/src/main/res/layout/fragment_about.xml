<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="301dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="Quem somos nós?"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="411dp"
        android:layout_height="562dp"
        android:text="Time 8: integrantes- Paulo, Guilherme, Eduardo, Nicolli, Matheus. Somos do colégio Juarez Wanderley da Embraer. Objetivo do projeto: melhorar a comunicação interna da escola com os alunos, criando um aplicativo que junta a entrega de tarefas, a feitura de provas, exibição de notas, calendário escolar, autoavaliação emocional e denuncias para a escola, criando um vínculo maior entre a equipe pedagógica e os alunos e um portal mais transparente e versátil"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.044" />
</androidx.constraintlayout.widget.ConstraintLayout>